generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// event model
model Event {
  id Int @id @unique @default(autoincrement())
  date Int
  month String
  heading String
  venue String
  state String
  city String
  detail String
  timeStart String
  timeEnd String
}

// staff table
model staff {
  id Int @id @default(autoincrement())
  employeeId String
  name String
  email String @unique
  password String
  phone String
  designation String
  address String
  joinDate String
  role String
  blood String
}

// Student table
model student {
  id Int @id @default(autoincrement())
  studentId String
  name String
  email String @unique
  password String
  phone String
  courseEnrolled String
  address String
  joinDate String
}
